<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fastScrollThumbDrawable">@drawable/ic_fast_scroll</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupWindow" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/default_text_color</item>
    </style>

    <!--activity_maps.xml-->
    <style name="FloatingMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">10dp</item>
        <item name="menu_colorNormal">@color/floatingButtonNormal</item>
        <item name="menu_colorPressed">@color/floatingButtonPressed</item>
        <item name="menu_colorRipple">@color/floatingButtonRipple</item>
        <item name="menu_backgroundColor">@color/floatingButtonBackground</item>
        <item name="menu_labels_ellipsize">end</item>
        <item name="menu_labels_singleLine">true</item>
        <item name="menu_fab_size">mini</item>
        <item name="menu_openDirection">down</item>
    </style>
    <style name="FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/floatingButtonNormal</item>
        <item name="fab_colorPressed">@color/floatingButtonPressed</item>
        <item name="fab_colorRipple">@color/floatingButtonRipple</item>
        <item name="fab_size">mini</item>
    </style>

    <style name="Transparent" parent="android:Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="item_search_text">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_search_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="item_file_explorer_text" parent="item_search_text" />
</resources>
